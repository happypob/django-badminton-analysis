/* index.wxss - 修复版小程序样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 区域样式 */
.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #667eea;
  padding-left: 20rpx;
}

/* 输入组样式 */
.input-group {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.input:focus {
  border-color: #667eea;
  background: white;
}

/* 状态显示样式 */
.status-display {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.status-value.idle {
  background: #e8f5e8;
  color: #52c41a;
}

.status-value.collecting {
  background: #fff2e8;
  color: #fa8c16;
}

/* 会话信息样式 */
.session-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 10rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
  font-family: monospace;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  min-width: 200rpx;
  height: 80rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

.btn:disabled {
  opacity: 0.5;
  transform: none;
}

/* 按钮颜色样式 */
.btn-primary {
  background: #667eea;
  color: white;
}

.btn-success {
  background: #52c41a;
  color: white;
}

.btn-danger {
  background: #ff4d4f;
  color: white;
}

.btn-secondary {
  background: #8c8c8c;
  color: white;
}

.btn-info {
  background: #1890ff;
  color: white;
}

.btn-warning {
  background: #fa8c16;
  color: white;
}

/* 说明样式 */
.instructions {
  background: #f6ffed;
  border: 2rpx solid #b7eb8f;
  border-radius: 10rpx;
  padding: 20rpx;
}

.instruction-item {
  display: block;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .button-group {
    flex-direction: column;
  }
  
  .btn {
    min-width: auto;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section {
  animation: fadeIn 0.5s ease-out;
}

/* 加载状态 */
.loading {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #f3f3f3;
  border-top: 2rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 